<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/secondary_theme">

    <TextView
        android:id="@+id/tourTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tour"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:background="@color/secondary_theme"/>

    <TextView
        android:id="@+id/nameListViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="TESTING"
        android:gravity="center"
        android:background="@color/secondary_theme"/>

    <TextView
        android:id="@+id/descriptionTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:background="@color/secondary_theme"/>

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/descriptionListViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        android:gravity="center"
        android:background="@color/secondary_theme"
        app:trimExpandedText=" read more"
        app:trimCollapsedText=" read less"
        app:trimMode="trimModeLength"
        app:colorClickableText="@color/main_theme"
        app:trimLength="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/durationTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textSize="22sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:background="@color/secondary_theme"/>

        <TextView
            android:id="@+id/stopsTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stops"
            android:layout_weight="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:background="@color/secondary_theme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/durationListViewItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="TESTING"
                android:gravity="center"
                android:background="@color/secondary_theme"/>

            <TextView
                android:id="@+id/stopsListViewItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="TESTING"
                android:gravity="center"
                android:background="@color/secondary_theme"
                android:layout_marginBottom="20dp"/>


    </LinearLayout>
</LinearLayout>