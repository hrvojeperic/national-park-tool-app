<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    app:cardCornerRadius="7dp"
    app:cardBackgroundColor="@color/black"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="0.5dp"
    app:cardElevation="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_theme">

        <ImageView
            android:id="@+id/nationalParkImageView"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher"
            android:paddingTop="0dp"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/nationalParkImageView"
            android:background="@drawable/national_park_name_gradient"/>

        <TextView
            android:id="@+id/nationalParkTextView"
            android:layout_centerHorizontal="true"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignBottom="@id/nationalParkImageView"
            android:textAlignment="center"
            tools:text="TESTING" />

        <ImageView
            android:id="@+id/bookmarkImageView"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="5dp"
            android:layout_alignBottom="@id/nationalParkImageView"
            android:gravity="center_vertical"
            android:layout_alignEnd="@id/nationalParkImageView"
            android:src="@drawable/bookmark_unfilled"
            android:focusable="false" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>